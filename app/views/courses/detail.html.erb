<%= form_for @course, html: {class: 'form-horizontal', role: 'form'} do |f| %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-md-offset-1 col-sm-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="text-center">课程信息</h3>
        </div>
        <div class="panel-body" >
          <form>
            <p>
              
             <div class="form-group">
              <%= f.label "课程名", class: 'col-sm-4 control-label' %>
              <label for="name" class="col-sm-5 control-label"><%= "#{@course.name}" %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "开课院系", class: 'col-sm-4 control-label' %>
              <label for="course_department" class="col-sm-5 control-label"><%= Hashes.department(@course.course_code) %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "一级学科", class: 'col-sm-4 control-label' %>
              <label for="course_firstlevel" class="col-sm-5 control-label"><%= Hashes.subject(@course.course_code) %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "授课对象", class: 'col-sm-4 control-label' %>
              <label for="teaching_object" class="col-sm-5 control-label"><%= Hashes.for_whom(@course.course_code) %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "课程属性", class: 'col-sm-4 control-label' %>
              <label for="course_type" class="col-sm-5 control-label"><%= Hashes.type(@course.course_code) %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "授课方式", class: 'col-sm-4 control-label' %>
              <label for="teaching_type" class="col-sm-5 control-label"><%= "#{@course.teaching_type}" %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "考核方式", class: 'col-sm-4 control-label' %>
              <label for="exam_type" class="col-sm-5 control-label"><%= "#{@course.exam_type}" %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "限选人数", class: 'col-sm-4 control-label' %>
              <label for="limit_num" class="col-sm-5 control-label"><%= "#{@course.limit_num}" %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "课时/学分", class: 'col-sm-4 control-label' %>
              <label for="period/credit" class="col-sm-5 control-label"><%= "#{@course.period}/#{@course.credit}" %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "上课地点", class: 'col-sm-4 control-label' %>
              <label for="location" class="col-sm-5 control-label"><%= "#{Hashes.campus(@course.course_code)} #{@course.building}-#{@course.class_room}" %></label>
             </div>
             
             <div class="form-group">
              <%= f.label "上课时间", class: 'col-sm-4 control-label' %>
              <label for="course_time" class="col-sm-5 control-label"><%= "第#{@course.start_week}~#{@course.end_week}周 #{Hashes.time_to_str(@course.course_time)}" %></label>
             </div>
             
             <%= link_to '返回', courses_path, :class => "btn btn-success btn-block" %>
             
            </p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>